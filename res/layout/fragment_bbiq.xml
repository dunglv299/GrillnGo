<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg"
              android:orientation="vertical">

    <include
            android:layout_marginTop="@dimen/margin_10"
            layout="@layout/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:paddingBottom="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/graph2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin_220"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:orientation="vertical"/>

        <Button
                android:id="@+id/connect_btn"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_width="@dimen/margin_160"
                android:layout_height="@dimen/margin_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_border"
                android:text="@string/connect"
                android:textColor="@color/white"
                android:textSize="22sp"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current"
                    android:textColor="#817F82"
                    android:textSize="@dimen/textSize_17"/>

            <TextView
                    android:id="@+id/tv2"
                    android:layout_toRightOf="@id/tv1"
                    android:layout_marginLeft="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/target"
                    android:textColor="#817F82"
                    android:textSize="@dimen/textSize_17"/>

            <TextView
                    android:id="@+id/current_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tv1"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/temperature_text_size"/>

            <TextView
                    android:id="@+id/degree_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/current_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/current_tv"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>

            <TextView
                    android:id="@+id/target_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tv2"
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/temperature_text_size"/>

            <TextView
                    android:id="@+id/degree_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/target_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/target_tv"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
        </RelativeLayout>

        <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/img_animal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </ImageView>
    </RelativeLayout>
</LinearLayout>